<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD0074"
    tools:context=".fragments.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/statisticsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваша статистика"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/winPercentageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы выигрываете в 60% случаев"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/lossesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проигрыши: 10"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/resetStatsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сбросить статистику"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>